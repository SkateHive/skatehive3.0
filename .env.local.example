NEXT_PUBLIC_HIVE_SEARCH_TAG=hive-173115    # Hive search tag
NEXT_PUBLIC_HIVE_USER=skatedev            # Hive user for the app
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# --- HIVE API ---
HIVE_POSTING_KEY=posting_key_here         # Hive posting key for API access

# --- VIP SIGNUP SYSTEM CONFIGURATION ---
